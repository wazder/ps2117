<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-insert-default-categories" author="hasan.tatar">
        <comment>Insert default categories</comment>
        
        <insert tableName="categories">
            <column name="name" value="Books"/>
            <column name="description" value="Books and educational materials"/>
        </insert>
        
        <insert tableName="categories">
            <column name="name" value="Electronics"/>
            <column name="description" value="Electronic devices and gadgets"/>
        </insert>
        
        <rollback>
            <delete tableName="categories">
                <where>name IN ('Books', 'Electronics')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>